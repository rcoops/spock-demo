{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "lib",
    "baseUrl": "./",
    "declaration": true,
    "lib": [
      "es2019"
    ],
    "strict": true,
    "strictNullChecks": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true
  },
  "include": [
    "./src/**/*"
  ]
}
